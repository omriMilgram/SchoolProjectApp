<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="8dp"
    android:background="#33FFFFFF"
    android:elevation="4dp"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/imageViewActivityImage"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logoappnew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewActivityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Activity Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imageViewActivityImage"
        app:layout_constraintTop_toTopOf="@id/imageViewActivityImage"
        app:layout_constraintEnd_toStartOf="@+id/buttonInfo" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Activity Type"
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/textViewActivityName"
        app:layout_constraintStart_toStartOf="@id/textViewActivityName"
        app:layout_constraintEnd_toStartOf="@+id/buttonInfo" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="12dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewActivityImage"
        app:layout_constraintBottom_toBottomOf="@id/imageViewActivityImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
